<!DOCTYPE html>
<html>
<head>
  <title>Ultramarine</title>
   <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->

  <script type="text/javascript" src="//use.typekit.net/xaw5agz.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-fixed-top">
	    <div class="navbar-inner">
	      <div class="container">
	        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	        </a>
	        <a class="brand" href="#">Ultramarine</a>
	        <div class="nav-collapse">
	          <ul class="nav">
	            <li><%= link_to "Locations", locations_path %></li>
	            <li><%= link_to "Challenges", challenges_path %></li>
	            <li><%= link_to "Photos", photos_path %></li>
                    <% if current_user %>
	              <li><%= link_to current_user.email, user_path(current_user) %> </li>
                      <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %>
                    <% else %>
                      <li><%= link_to "Sign in", new_user_session_path %> </li>
                      <li><%= link_to "Register", new_user_registration_path %> </li>
                    <% end %>
	          </ul>
	        </div>
	      </div>
	    </div>
  </div>

<%= flash[:notice] %>

<%= yield %>

</body>
</html>
