%ul.breadcrumb
  %li= @challenge.location.name

%p
  %b Name:
  = @challenge.name
%p
  %b Description:
  = @challenge.description

= form_for Photo.new, :html => {:id => "ajax_photo_form"} do |f|
  = f.hidden_field :challenge_id, :value => @challenge.id 
  = f.label :image, "Upload images:"
  = f.file_field :image, multiple: true, name: "photo[image]"

-if @challenge.todo_users.exists?(:id => current_user.id)
  %p
    = link_to 'Remove from Todo list', remove_todo_path(@challenge), :class => 'btn'
-else
  %p
    = link_to 'Add to Todo list', add_todo_path(@challenge), :class => 'btn'

-if @challenge.completed_users.exists?(:id => current_user.id)
  %p
    = link_to 'Mark as incomplete', remove_completed_path(@challenge), :class => 'btn'
-else
  %p
    = link_to 'Mark completed', add_completed_path(@challenge), :class => 'btn'


- @challenge.photos.each do |photo|
  = image_tag photo.image.url(:thumb)

= link_to 'Edit', edit_challenge_path(@challenge)
\|
= link_to 'Back', challenges_path

= render :partial => "comments/form", :locals => {:challenge => @challenge}
= render @challenge.comments
